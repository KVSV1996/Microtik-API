@model string

<!DOCTYPE html>
<html>
<head>
    <title>Confirm Deletion</title>
</head>
<body>
    <h1>Confirm Deletion</h1>
    <p>Are you sure you want to delete the user: <strong>@Model</strong> ?</p>

    <form method="post" action="/Microtik/Delete">
        <input type="hidden" name="nameToDelete" value="@Model" />
        <button type="submit">Yes, Delete</button>
    </form>

    <a href="/Microtik/Index">Cancel</a>
</body>
</html>
